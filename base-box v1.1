useradd vagrant -m -G $(more /etc/group | grep astra | cut -d ":" -f 1 | paste -sd "," -) -p $(perl -e 'print crypt("vagrant", "salt"),"\n"')
mkdir /home/vagrant/.ssh
echo " vagrant insecure public key" >> /home/vagrant/.ssh/authorized_keys
chmod 0700 /home/vagrant/.ssh/ & chmod 0600 /home/vagrant/.ssh/authorized_keys
sudo sed -i 's/#UseDNS/UseDNS/g' /etc/ssh/sshd_config 

